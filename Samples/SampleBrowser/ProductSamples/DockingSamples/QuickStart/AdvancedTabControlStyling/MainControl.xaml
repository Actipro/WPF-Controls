<sampleBrowser:ProductItemControl 
	x:Class="ActiproSoftware.ProductSamples.DockingSamples.QuickStart.AdvancedTabControlStyling.MainControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:docking="http://schemas.actiprosoftware.com/winfx/xaml/docking"
	xmlns:sampleBrowser="clr-namespace:ActiproSoftware.SampleBrowser"
	>

	<sampleBrowser:ProductItemControl.SideBarContent>
		<StackPanel>

			<Expander Style="{StaticResource SampleHeaderDescriptionExpanderStyle}">
				<TextBlock Style="{StaticResource SampleHeaderDescriptionTextBlockStyle}">
				    This QuickStart shows how easily the tabs of an AdvancedTabControl can be customized with various properties.
				    <LineBreak /><LineBreak />
				    You have full control over the corner radius, near/far side slant, min/max size, and padding.
				</TextBlock>
			</Expander>

		</StackPanel>
	</sampleBrowser:ProductItemControl.SideBarContent>

	<ScrollViewer Style="{StaticResource SampleVerticalScrollViewerStyle}">
		<StackPanel Style="{StaticResource SamplePanelWideStyle}">

			<docking:AdvancedTabControl MinHeight="80" HasNewTabButton="True">
				<docking:AdvancedTabItem Header="Document1.txt">
					<TextBox Text="Default tabs with new tab button" Margin="10" AcceptsReturn="True" />
				</docking:AdvancedTabItem>
				<docking:AdvancedTabItem Header="Document2.txt">
					<TextBox Text="Content 2" Margin="10" AcceptsReturn="True" />
				</docking:AdvancedTabItem>
				<docking:AdvancedTabItem Header="Document3.txt">
					<TextBox Text="Content 3" Margin="10" AcceptsReturn="True" />
				</docking:AdvancedTabItem>
			</docking:AdvancedTabControl>

			<docking:AdvancedTabControl Margin="0,10,0,0" MinHeight="80" TabCornerRadius="8,8,0,0" TabPadding="10,4">
				<docking:AdvancedTabItem Header="Document1.txt">
					<TextBox Text="Rounded rectangle tabs" Margin="10" AcceptsReturn="True" />
				</docking:AdvancedTabItem>
				<docking:AdvancedTabItem Header="Document2.txt">
					<TextBox Text="Content 2" Margin="10" AcceptsReturn="True" />
				</docking:AdvancedTabItem>
				<docking:AdvancedTabItem Header="Document3.txt">
					<TextBox Text="Content 3" Margin="10" AcceptsReturn="True" />
				</docking:AdvancedTabItem>
			</docking:AdvancedTabControl>

			<docking:AdvancedTabControl Margin="0,10,0,0" MinHeight="80" TabNearSlantExtent="5" TabFarSlantExtent="5">
				<docking:AdvancedTabItem Header="Document1.txt">
					<TextBox Text="Trapezoid tabs" Margin="10" AcceptsReturn="True" />
				</docking:AdvancedTabItem>
				<docking:AdvancedTabItem Header="Document2.txt">
					<TextBox Text="Content 2" Margin="10" AcceptsReturn="True" />
				</docking:AdvancedTabItem>
				<docking:AdvancedTabItem Header="Document3.txt">
					<TextBox Text="Content 3" Margin="10" AcceptsReturn="True" />
				</docking:AdvancedTabItem>
			</docking:AdvancedTabControl>

			<docking:AdvancedTabControl Margin="0,10,0,0" MinHeight="80" MinTabExtent="200" MaxTabExtent="200" TabCornerRadius="2"
										TabNearSlantExtent="8" TabFarSlantExtent="8" TabPadding="5,4" TabSpacing="-10">
				<docking:AdvancedTabItem Header="Document1.txt">
					<TextBox Text="Browser overlapping tabs" Margin="10" AcceptsReturn="True" />
				</docking:AdvancedTabItem>
				<docking:AdvancedTabItem Header="Document2.txt">
					<TextBox Text="Content 2" Margin="10" AcceptsReturn="True" />
				</docking:AdvancedTabItem>
				<docking:AdvancedTabItem Header="Document3.txt">
					<TextBox Text="Content 3" Margin="10" AcceptsReturn="True" />
				</docking:AdvancedTabItem>
			</docking:AdvancedTabControl>

			<docking:AdvancedTabControl Margin="0,10,0,0" MinHeight="80" TabCornerRadius="5,3,0,0" TabNearSlantExtent="10" TabSpacing="-5">
				<docking:AdvancedTabItem Header="Document1.txt">
					<TextBox Text="Curved, slanted, overlapping front tabs" Margin="10" AcceptsReturn="True" />
				</docking:AdvancedTabItem>
				<docking:AdvancedTabItem Header="Document2.txt">
					<TextBox Text="Content 2" Margin="10" AcceptsReturn="True" />
				</docking:AdvancedTabItem>
				<docking:AdvancedTabItem Header="Document3.txt">
					<TextBox Text="Content 3" Margin="10" AcceptsReturn="True" />
				</docking:AdvancedTabItem>
			</docking:AdvancedTabControl>

			<docking:AdvancedTabControl Margin="0,10,0,0" MinHeight="80" TabCornerRadius="3,5,3,0" TabSpacing="3" TabFarSlantExtent="8">
				<docking:AdvancedTabItem Header="Document1.txt">
					<TextBox Text="Curved and spaced tabs" Margin="10" AcceptsReturn="True" />
				</docking:AdvancedTabItem>
				<docking:AdvancedTabItem Header="Document2.txt">
					<TextBox Text="Content 2" Margin="10" AcceptsReturn="True" />
				</docking:AdvancedTabItem>
				<docking:AdvancedTabItem Header="Document3.txt">
					<TextBox Text="Content 3" Margin="10" AcceptsReturn="True" />
				</docking:AdvancedTabItem>
			</docking:AdvancedTabControl>

			<docking:AdvancedTabControl Margin="0,10,0,0" MinHeight="80" MinTabExtent="150" MaxTabExtent="150" TabPadding="15,6">
				<docking:AdvancedTabItem Header="Document1.txt">
					<TextBox Text="Fixed tab size of 150px with additional padding" Margin="10" AcceptsReturn="True" />
				</docking:AdvancedTabItem>
				<docking:AdvancedTabItem Header="Document2.txt">
					<TextBox Text="Content 2" Margin="10" AcceptsReturn="True" />
				</docking:AdvancedTabItem>
				<docking:AdvancedTabItem Header="Document3.txt">
					<TextBox Text="Content 3" Margin="10" AcceptsReturn="True" />
				</docking:AdvancedTabItem>
			</docking:AdvancedTabControl>

		</StackPanel>
	</ScrollViewer>

</sampleBrowser:ProductItemControl>
