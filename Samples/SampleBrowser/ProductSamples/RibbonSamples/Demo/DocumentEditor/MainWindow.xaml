<ribbon:RibbonWindow 
	x:Name="ribbonDemo" 
	x:Class="ActiproSoftware.ProductSamples.RibbonSamples.Demo.DocumentEditor.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:shared="http://schemas.actiprosoftware.com/winfx/xaml/shared"
    xmlns:ribbon="http://schemas.actiprosoftware.com/winfx/xaml/ribbon"
	xmlns:editors="http://schemas.actiprosoftware.com/winfx/xaml/editors"
	xmlns:ribboneditors="http://schemas.actiprosoftware.com/winfx/xaml/ribboneditors"
    xmlns:themes="http://schemas.actiprosoftware.com/winfx/xaml/themes"
    xmlns:media="clr-namespace:System.Windows.Media;assembly=PresentationCore"
    xmlns:mediaImaging="clr-namespace:System.Windows.Media.Imaging;assembly=PresentationCore"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
	xmlns:ribbonSamplesCommon="clr-namespace:ActiproSoftware.ProductSamples.RibbonSamples.Common" 
    xmlns:sample="clr-namespace:ActiproSoftware.ProductSamples.RibbonSamples.Demo.DocumentEditor"
	xmlns:sampleBrowser="clr-namespace:ActiproSoftware.SampleBrowser"
	Icon="/Images/Icons/Actipro.ico"
	ResizeMode="CanResizeWithGrip" 
	ApplicationName="Actipro Ribbon Sample"	
	DocumentName="Document1"
	WindowStartupLocation="CenterScreen"
	Width="800" Height="600"
    >
	<ribbon:RibbonWindow.Resources>
		
		<ObjectDataProvider x:Key="UnderlineStylesObjectDataProvider" MethodName="GetValues" ObjectType="{x:Type system:Enum}">
			<ObjectDataProvider.MethodParameters>
				<x:Type TypeName="ribbonSamplesCommon:UnderlineStyle"/>
			</ObjectDataProvider.MethodParameters>
		</ObjectDataProvider>
		
		<ribbonSamplesCommon:UnderlineStyleScreenTipConverter x:Key="UnderlineStyleScreenTipConverter" />
		
		<!-- Styles for Backstage content -->

		<Style x:Key="ContentBoxBorderStyle" TargetType="Border">
			<Setter Property="Padding" Value="7" />
			<Setter Property="VerticalAlignment" Value="Top" />
		</Style>
		
	</ribbon:RibbonWindow.Resources>
	
	<DockPanel>
        
		<!-- Ribbon Control -->
		<ribbon:Ribbon x:Name="ribbon" DockPanel.Dock="Top" TargetContentContainer="{Binding ElementName=contentContainer}"
			IsQuickAccessToolBarCustomizationEnabled="True" 
			ApplicationButtonScreenTipHeader="Application Button" 
			ApplicationButtonScreenTipImageSource="/Images/Other/BackstageScreenTip.png"
			ApplicationButtonScreenTipDescription="Click here to open, save, or print, and to see everything else you can do with your document."
			ApplicationButtonScreenTipHelpUri="http://www.actiprosoftware.com"
			IsCustomizeQuickAccessToolBarMenuItemVisible="True"
			IsApplicationMenuOpenChanged="OnIsApplicationMenuOpenChanged"
			>
			
			<!-- Tab Panel Items (Appear next to the tabs) -->
			<ribbon:Ribbon.TabPanelItems>
				<ribbon:Button KeyTipAccessText="Z" Command="sample:ApplicationCommands.Comments" />
			</ribbon:Ribbon.TabPanelItems>
			
			<ribbon:Ribbon.ApplicationMenu>
				<!-- Backstage (Could alternatively use ApplicationMenu control) -->
				<ribbon:Backstage x:Name="appMenu">
					
					<ribbon:BackstageTab Header="Info" KeyTipAccessText="I">
						<DockPanel>
							<Border DockPanel.Dock="Right" Width="200" Margin="19,9" Style="{StaticResource ContentBoxBorderStyle}">
								<StackPanel>
									<Viewbox Width="125" Height="100">
										<shared:ActiproLogo />
									</Viewbox>
									
									<TextBlock Margin="0,19,0,0" Text="Properties" />
									<Grid Margin="0,11,0,0" TextElement.Foreground="#808080">
										<Grid.RowDefinitions>
											<RowDefinition Height="Auto" />
											<RowDefinition Height="3" />
											<RowDefinition Height="Auto" />
											<RowDefinition Height="3" />
											<RowDefinition Height="Auto" />
										</Grid.RowDefinitions>
										<Grid.ColumnDefinitions>
											<ColumnDefinition Width="*" />
											<ColumnDefinition Width="*" />
										</Grid.ColumnDefinitions>
										
										<TextBlock Grid.Row="0" Grid.Column="0" Text="Size" TextTrimming="CharacterEllipsis" />
										<TextBlock Grid.Row="0" Grid.Column="1" Text="Not saved yet" TextTrimming="CharacterEllipsis" />
										
										<TextBlock Grid.Row="2" Grid.Column="0" Text="Pages" TextTrimming="CharacterEllipsis" />
										<TextBlock Grid.Row="2" Grid.Column="1" Text="3" TextTrimming="CharacterEllipsis" />
										
										<TextBlock Grid.Row="4" Grid.Column="0" Text="Words" TextTrimming="CharacterEllipsis" />
										<TextBlock Grid.Row="4" Grid.Column="1" Text="481" TextTrimming="CharacterEllipsis" />
										
									</Grid>
								</StackPanel>
							</Border>
								
							<Rectangle DockPanel.Dock="Right" Width="1" Fill="{DynamicResource {x:Static themes:AssetResourceKeys.RibbonSeparatorBackgroundNormalBrushKey}}" />
								
							<Border Margin="19,9" Style="{StaticResource ContentBoxBorderStyle}">
								<StackPanel>
									<shared:PixelSnapper>
										<TextBlock Margin="7,7,7,4" Text="Information about Document1" FontSize="22" TextTrimming="CharacterEllipsis" />
									</shared:PixelSnapper>
									<Rectangle Height="1" Stroke="{DynamicResource {x:Static themes:AssetResourceKeys.RibbonSeparatorBackgroundNormalBrushKey}}" />
							
									<DockPanel Margin="7,22,0,18">
										<ribbon:Button DockPanel.Dock="Left" Label="Protect Document" ImageSourceLarge="/Images/Icons/ProtectDocument32.png" Context="BackstageItem" VariantSize="Large" VerticalAlignment="Top" KeyTipAccessText="P" />
										<StackPanel Margin="18,0,0,0">
											<TextBlock Text="Permissions" FontSize="13" FontWeight="Bold" TextTrimming="CharacterEllipsis" />
											<TextBlock Margin="0,5,0,0" Text="Anyone can open, copy, and change any part of this document." TextWrapping="Wrap" />									
										</StackPanel>
									</DockPanel>
									<Rectangle Height="1" Stroke="{DynamicResource {x:Static themes:AssetResourceKeys.RibbonSeparatorBackgroundNormalBrushKey}}" />
							
									<DockPanel Margin="7,22,0,18">
										<ribbon:Button DockPanel.Dock="Left" Label="Check for Issues" ImageSourceLarge="/Images/Icons/CheckIssues32.png" Context="BackstageItem" VariantSize="Large" VerticalAlignment="Top" KeyTipAccessText="I" />
										<StackPanel Margin="18,0,0,0">
											<TextBlock Text="Prepare for Sharing" FontSize="13" FontWeight="Bold" TextTrimming="CharacterEllipsis" />
											<TextBlock Margin="0,5,0,0" Text="Check for issues prior to sharing." TextWrapping="Wrap" />									
										</StackPanel>
									</DockPanel>
									<Rectangle Height="1" Stroke="{DynamicResource {x:Static themes:AssetResourceKeys.RibbonSeparatorBackgroundNormalBrushKey}}" />
							
									<DockPanel Margin="7,22,0,18">
										<ribbon:PopupButton DockPanel.Dock="Left" Label="Manage Versions" ImageSourceLarge="/Images/Icons/ManageVersions32.png" Context="BackstageItem" VariantSize="Large" VerticalAlignment="Top" KeyTipAccessText="V">
											<ribbon:Menu ItemVariantSize="Large">
												<ribbon:Button Label="Recover Unsaved Documents" ImageSourceLarge="/Images/Icons/RecoverUnsavedDocuments32.png" MenuItemDescription="Browse recent copies of unsaved files." KeyTipAccessText="B" />
												<ribbon:Button Label="Delete All Unsaved Documents" ImageSourceLarge="/Images/Icons/DeleteUnsavedDocuments32.png" MenuItemDescription="Delete all recent copies of unsaved files." KeyTipAccessText="D" />											
											</ribbon:Menu>
										</ribbon:PopupButton>
										<StackPanel Margin="18,0,0,0">
											<TextBlock Text="Versions" FontSize="13" FontWeight="Bold" TextTrimming="CharacterEllipsis" />
											<TextBlock Margin="0,5,0,0" Text="There are no previous versions of this file." TextWrapping="Wrap" />									
										</StackPanel>
									</DockPanel>
								</StackPanel>
							</Border>
						</DockPanel>
					</ribbon:BackstageTab>

					<ribbon:BackstageTab x:Name="newBackstageTab" Header="New" KeyTipAccessText="N">
						<Border Style="{StaticResource ContentBoxBorderStyle}">
							<StackPanel Margin="19,9">
								<ribbon:Separator Label="New Document" Context="BackstageItem" />
								
								<DockPanel Margin="7,22,0,18">
									<ribbon:Button DockPanel.Dock="Left" Command="sample:ApplicationCommands.FileNewRtfDocument" Context="BackstageItem" VariantSize="Large" VerticalAlignment="Top" KeyTipAccessText="R" />
									<StackPanel Margin="18,0,0,0">
										<TextBlock Text="Rich-Text" FontSize="13" FontWeight="Bold" TextTrimming="CharacterEllipsis" />
										<TextBlock Margin="0,5,0,0" Text="Creates a new rich-text file for editing in the application." TextWrapping="Wrap" />									
									</StackPanel>
								</DockPanel>
								<Rectangle Height="1" Stroke="{DynamicResource {x:Static themes:AssetResourceKeys.RibbonSeparatorBackgroundNormalBrushKey}}" />
							
								<DockPanel Margin="7,22,0,18">
									<ribbon:Button DockPanel.Dock="Left" Command="sample:ApplicationCommands.FileNewTextDocument" Context="BackstageItem" VariantSize="Large" VerticalAlignment="Top" KeyTipAccessText="T" />
									<StackPanel Margin="18,0,0,0">
										<TextBlock Text="Plain Text" FontSize="13" FontWeight="Bold" TextTrimming="CharacterEllipsis" />
										<TextBlock Margin="0,5,0,0" Text="Creates a new plain text file for editing in the application." TextWrapping="Wrap" />									
									</StackPanel>
								</DockPanel>
								<Rectangle Height="1" Stroke="{DynamicResource {x:Static themes:AssetResourceKeys.RibbonSeparatorBackgroundNormalBrushKey}}" />
							</StackPanel>
						</Border>
					</ribbon:BackstageTab>
					
					<ribbon:BackstageTab Header="Open" KeyTipAccessText="O">
						<Border Style="{StaticResource ContentBoxBorderStyle}">
							<DockPanel Margin="19,9">
								<ribbon:Separator DockPanel.Dock="Top" Label="Recent Documents" Context="BackstageItem" />

								<shared:ZeroSizeContentControl HasHeight="False">
									<ScrollViewer Margin="0,11,0,0" MaxWidth="500" VerticalScrollBarVisibility="Auto" HorizontalAlignment="Left"
												  Style="{DynamicResource {x:Static themes:SharedResourceKeys.ScrollViewerStyleKey}}">
										<ribbon:RecentDocumentMenu VariantSize="Large">
											<shared:RecentDocumentManager x:Name="recentDocManager" MaxFilteredDocumentCount="20" />
										</ribbon:RecentDocumentMenu>
									</ScrollViewer>
								</shared:ZeroSizeContentControl>
							</DockPanel>
						</Border>
					</ribbon:BackstageTab>
					
					<ribbon:Button Command="ApplicationCommands.Save" KeyTipAccessText="S" />

					<ribbon:BackstageTab Header="Save As" KeyTipAccessText="A">
						<Border Style="{StaticResource ContentBoxBorderStyle}">
							<StackPanel Margin="19,9">
								<ribbon:Separator Label="Save As" Context="BackstageItem" />
							</StackPanel>
						</Border>
					</ribbon:BackstageTab>
					
					<ribbon:BackstageTab Header="Print" KeyTipAccessText="P">
						<Border Style="{StaticResource ContentBoxBorderStyle}">
							<StackPanel Margin="19,9">
								<ribbon:Separator Label="Print" Context="BackstageItem" />
							</StackPanel>
						</Border>
					</ribbon:BackstageTab>
					
					<ribbon:BackstageTab Header="Share" KeyTipAccessText="D">
						<ribbon:TaskTabControl Margin="27,17" SelectedIndex="1">
							<ribbon:Separator Label="Share" />
							<ribbon:TaskTabItem KeyTipAccessText="E">
								<ribbon:TaskTabItem.Header>
									<DockPanel MinWidth="250">
										<shared:DynamicImage Width="32" Height="32" Source="/Images/Icons/Mail32.png" Stretch="None" VerticalAlignment="Center" />
										<TextBlock Margin="20,0,0,0" Text="Send Using E-mail" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" />
									</DockPanel>
								</ribbon:TaskTabItem.Header>
									
								<Border Style="{StaticResource ContentBoxBorderStyle}" Padding="0">
									<StackPanel>
										<ribbon:Separator Label="Send Using E-mail" Context="BackstageItem" />
										
										<DockPanel Margin="0,18,0,18">
											<ribbon:Button DockPanel.Dock="Left" Label="Send as Attachment" ImageSourceLarge="/Images/Icons/Mail32.png" Context="BackstageItem" VariantSize="Large" VerticalAlignment="Top" KeyTipAccessText="A" />
											<TextBlock MinWidth="30" Margin="18,0,0,0" Text="Attach a copy of this document to an e-mail." TextWrapping="Wrap" />									
										</DockPanel>
										<Rectangle Height="1" Stroke="{DynamicResource {x:Static themes:AssetResourceKeys.RibbonSeparatorBackgroundNormalBrushKey}}" />
									</StackPanel>
								</Border>
							</ribbon:TaskTabItem>
							<ribbon:TaskTabItem KeyTipAccessText="W">
								<ribbon:TaskTabItem.Header>
									<DockPanel MinWidth="250">
										<shared:DynamicImage Width="32" Height="32" Source="/Images/Icons/Globe32.png" Stretch="None" VerticalAlignment="Center" />
										<TextBlock Margin="20,0,0,0" Text="Save to Web" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" />
									</DockPanel>
								</ribbon:TaskTabItem.Header>
									
								<ribbon:Separator Label="Save to Web" Context="BackstageItem" />
							</ribbon:TaskTabItem>
							<ribbon:TaskTabItem KeyTipAccessText="B">
								<ribbon:TaskTabItem.Header>
									<DockPanel MinWidth="250">
										<shared:DynamicImage Width="32" Height="32" Source="/Images/Icons/PublishPost32.png" Stretch="None" VerticalAlignment="Center" />
										<TextBlock Margin="20,0,0,0" Text="Publish as Blog Post" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" />
									</DockPanel>
								</ribbon:TaskTabItem.Header>
									
								<ribbon:Separator Label="Publish as Blog Post" Context="BackstageItem" />
							</ribbon:TaskTabItem>
							<ribbon:Separator Label="File Types" />
							<ribbon:TaskTabItem KeyTipAccessText="F">
								<ribbon:TaskTabItem.Header>
									<DockPanel MinWidth="250">
										<shared:DynamicImage Width="32" Height="32" Source="/Images/Icons/SaveAs32.png" Stretch="None" VerticalAlignment="Center" />
										<TextBlock Margin="20,0,0,0" Text="Change File Type" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" />
									</DockPanel>
								</ribbon:TaskTabItem.Header>
									
								<ribbon:Separator Label="Change File Type" Context="BackstageItem" />
							</ribbon:TaskTabItem>
						</ribbon:TaskTabControl>
					</ribbon:BackstageTab>
					
					<ribbon:Button Command="ApplicationCommands.Close" KeyTipAccessText="C" />
					<ribbon:Separator />
					<ribbon:Button Command="sample:ApplicationCommands.ApplicationOptions" KeyTipAccessText="T" />
					<ribbon:Button Command="sample:ApplicationCommands.ApplicationExit" KeyTipAccessText="X" />
					
				</ribbon:Backstage>				
				
			</ribbon:Ribbon.ApplicationMenu>
			
			<!-- Quick Access ToolBar (QAT) Common Items -->
			<ribbon:Ribbon.QuickAccessToolBarCommonItems>
				<ribbon:Button Id="New" Command="ApplicationCommands.New" />
				<ribbon:Button Id="Open" Command="ApplicationCommands.Open" />
				<ribbon:Button Id="Save" Command="ApplicationCommands.Save" />
				<ribbon:Button Id="Undo" Command="ApplicationCommands.Undo" />
				<ribbon:Button Id="Redo" Command="ApplicationCommands.Redo" />
			</ribbon:Ribbon.QuickAccessToolBarCommonItems>
			
			<!-- Quick Access ToolBar (QAT) -->
			<ribbon:Ribbon.QuickAccessToolBarItems>
				<ribbon:Button Id="Save" Command="ApplicationCommands.Save" />
				<ribbon:Button Id="Undo" Command="ApplicationCommands.Undo" />
				<ribbon:Button Id="Redo" Command="ApplicationCommands.Redo" />
			</ribbon:Ribbon.QuickAccessToolBarItems>
			
			<!-- Tabs -->
			<ribbon:Ribbon.Tabs>
				
				<!-- "Home" Tab -->
				<ribbon:Tab Label="Home" KeyTipAccessText="H">
					<ribbon:Group Label="Clipboard" ImageSourceSmall="/Images/Icons/Paste16.png" Command="sample:ApplicationCommands.ShowDialog" CommandParameter="Clipboard" KeyTipAccessText="ZC" DialogLauncherKeyTipAccessText="FO">
						<ribbon:Group.Variants>
							<ribbon:GroupVariant Priority="10" Size="Small" />
						</ribbon:Group.Variants>
						<ribbon:SplitButton KeyTipAccessText="V" Command="ApplicationCommands.Paste" Id="Paste">
							<ribbon:Menu>
								<ribbon:Button KeyTipAccessText="P" Command="ApplicationCommands.Paste" Id="Paste" />
								<ribbon:Button ImageSourceSmall="/Images/Icons/PasteSpecial16.png" Label="Paste Special" KeyTipAccessText="S" />
								<ribbon:Button ImageSourceSmall="/Images/Icons/PasteHyperlink16.png" Label="Paste Hyperlink" KeyTipAccessText="H" />
							</ribbon:Menu>
						</ribbon:SplitButton>
						<ribbon:StackPanel ItemVariantBehavior="MediumThenSmallWhenSmall">
							<ribbon:Button KeyTipAccessText="X" Command="ApplicationCommands.Cut" />
							<ribbon:Button KeyTipAccessText="C" Command="ApplicationCommands.Copy" />
							<ribbon:Button ImageSourceSmall="/Images/Icons/FormatPainter16.png" Label="Format Painter" KeyTipAccessText="FP" />
						</ribbon:StackPanel>					
					</ribbon:Group>
					<ribbon:Group ImageSourceSmall="/Images/Icons/FontColor16.png" Label="Font" Command="sample:ApplicationCommands.ShowDialog" CommandParameter="Font" KeyTipAccessText="ZF">
						<ribbon:Group.Variants>
							<ribbon:GroupVariant Priority="50" Size="Medium" />
							<ribbon:GroupVariant Priority="90" Size="Collapsed" />
						</ribbon:Group.Variants>
						<ribbon:RowPanel ThreeRowItemSortOrder="0,3,2,5,4,1">
							<ribbon:ButtonGroup HasBorder="False">
								<ribbon:FontFamilyComboBox Width="135" Command="sample:ApplicationCommands.FontFamily" KeyTipAccessText="FF" />
								<ribbon:FontSizeComboBox Width="40" Command="sample:ApplicationCommands.FontSize" KeyTipAccessText="FS" />
							</ribbon:ButtonGroup>
							<ribbon:ButtonGroup>
								<ribbon:Button KeyTipAccessText="FG" Command="EditingCommands.IncreaseFontSize" />
								<ribbon:Button KeyTipAccessText="FK" Command="EditingCommands.DecreaseFontSize" />
							</ribbon:ButtonGroup>
							<ribbon:ButtonGroup>
								<ribbon:Button KeyTipAccessText="E" Command="sample:ApplicationCommands.ClearFormatting" />
							</ribbon:ButtonGroup>
							<ribbon:ButtonGroup>
								<ribbon:Button KeyTipAccessText="1" Command="EditingCommands.ToggleBold" />
								<ribbon:Button KeyTipAccessText="2" Command="EditingCommands.ToggleItalic" />
								<ribbon:SplitButton KeyTipAccessText="3" Command="EditingCommands.ToggleUnderline" PopupResizeMode="Vertical">
									<StackPanel>
										<ribbon:PopupGallery UseSingleColumn="True" ItemsSource="{Binding Source={StaticResource UnderlineStylesObjectDataProvider}}">
											<ribbon:PopupGallery.ItemContainerStyle>
												<Style TargetType="{x:Type ribbon:GalleryItem}">
													<Setter Property="ScreenTipHeader" Value="{Binding Converter={StaticResource UnderlineStyleScreenTipConverter}}" />
												</Style>
											</ribbon:PopupGallery.ItemContainerStyle>											
											<ribbon:PopupGallery.ItemTemplate>
												<DataTemplate>
													<shared:CustomDrawElement Width="150" Height="21" CustomDraw="OnCustomDrawUnderlineGalleryItems" />
												</DataTemplate>
											</ribbon:PopupGallery.ItemTemplate>
										</ribbon:PopupGallery>
										<ribbon:Menu>
											<ribbon:Separator />
											<ribbon:Button Label="More Underlines"  />
										</ribbon:Menu>
									</StackPanel>
								</ribbon:SplitButton>
								<ribbon:Button KeyTipAccessText="4" Command="sample:ApplicationCommands.ToggleStrikethrough" />
								<ribbon:Button KeyTipAccessText="5" Command="EditingCommands.ToggleSubscript" />
								<ribbon:Button KeyTipAccessText="6" Command="EditingCommands.ToggleSuperscript" />
							</ribbon:ButtonGroup>
							<ribbon:ButtonGroup>
								<ribbon:PopupButton Label="Change Case" ImageSourceSmall="/Images/Icons/ChangeCase16.png" KeyTipAccessText="7" />
							</ribbon:ButtonGroup>
							<ribbon:ButtonGroup>
								<ribbon:SplitButton Command="sample:ApplicationCommands.ApplyDefaultBackground" KeyTipAccessText="I"
									ScreenTipDescription="Make text look like it was marked with a highlighter pen.">
									<StackPanel>
										<ribbon:PopupGallery InitialColumnCount="5" VerticalScrollBarVisibility="Hidden" HorizontalAlignment="Center"
											Command="sample:ApplicationCommands.ApplyBackground" IsPreviewEnabled="True">							   
											<ribbon:PopupGallery.CommandParameter>
												<ribbon:BrushValueCommandParameter />
											</ribbon:PopupGallery.CommandParameter>
											<ribbon:PopupGallery.ItemTemplate>
												<DataTemplate>
													<Border BorderThickness="1" BorderBrush="Silver" Background="{Binding BindsDirectlyToSource=True}" Width="28" Height="28" />
												</DataTemplate>
											</ribbon:PopupGallery.ItemTemplate>
											
											<media:SolidColorBrush ribbon:ScreenTipService.ScreenTipHeader="Yellow" Color="{x:Static media:Colors.Yellow}" />
											<media:SolidColorBrush ribbon:ScreenTipService.ScreenTipHeader="Lime" Color="{x:Static media:Colors.Lime}" />
											<media:SolidColorBrush ribbon:ScreenTipService.ScreenTipHeader="Teal" Color="{x:Static media:Colors.Teal}" />
											<media:SolidColorBrush ribbon:ScreenTipService.ScreenTipHeader="Magenta" Color="{x:Static media:Colors.Magenta}" />
											<media:SolidColorBrush ribbon:ScreenTipService.ScreenTipHeader="Blue" Color="{x:Static media:Colors.Blue}" />
											<media:SolidColorBrush ribbon:ScreenTipService.ScreenTipHeader="Red" Color="{x:Static media:Colors.Red}" />
											<media:SolidColorBrush ribbon:ScreenTipService.ScreenTipHeader="Navy" Color="{x:Static media:Colors.Navy}" />
											<media:SolidColorBrush ribbon:ScreenTipService.ScreenTipHeader="Cyan" Color="{x:Static media:Colors.Cyan}" />
											<media:SolidColorBrush ribbon:ScreenTipService.ScreenTipHeader="Green" Color="{x:Static media:Colors.Green}" />
											<media:SolidColorBrush ribbon:ScreenTipService.ScreenTipHeader="Purple" Color="{x:Static media:Colors.Purple}" />
											<media:SolidColorBrush ribbon:ScreenTipService.ScreenTipHeader="Maroon" Color="{x:Static media:Colors.Maroon}" />
											<media:SolidColorBrush ribbon:ScreenTipService.ScreenTipHeader="Olive" Color="{x:Static media:Colors.Olive}" />
											<media:SolidColorBrush ribbon:ScreenTipService.ScreenTipHeader="Gray" Color="{x:Static media:Colors.Gray}" />
											<media:SolidColorBrush ribbon:ScreenTipService.ScreenTipHeader="Silver" Color="{x:Static media:Colors.Silver}" />
											<media:SolidColorBrush ribbon:ScreenTipService.ScreenTipHeader="Black" Color="{x:Static media:Colors.Black}" />
										</ribbon:PopupGallery>
										<ribbon:Menu>
											<ribbon:Separator />
											<ribbon:Button Label="No Color" Command="sample:ApplicationCommands.ApplyBackground"  />
											<ribbon:Separator />
											<ribbon:Button Label="Stop Highlighting" IsEnabled="False" />
										</ribbon:Menu>
									</StackPanel>
								</ribbon:SplitButton>
								<ribbon:SplitButton Command="sample:ApplicationCommands.ApplyDefaultForeground" KeyTipAccessText="FC">
									<StackPanel>
										<ribbon:ColorPickerGallery InitialColumnCount="10" HorizontalAlignment="Center"
											Command="sample:ApplicationCommands.ApplyForeground" IsPreviewEnabled="True">
											<ribbon:ColorPickerGallery.CategorizedItemsSource>
												<x:Array Type="{x:Type media:SolidColorBrush}">
													<media:SolidColorBrush ribbon:PopupGallery.Category="Theme Colors" ribbon:ColorPickerGallery.LayoutBehavior="Shaded" Color="#FFFFFF" ribbon:ScreenTipService.ScreenTipHeader="White" />
													<media:SolidColorBrush ribbon:PopupGallery.Category="Theme Colors" ribbon:ColorPickerGallery.LayoutBehavior="Shaded" Color="#000000" ribbon:ScreenTipService.ScreenTipHeader="Black" />
													<media:SolidColorBrush ribbon:PopupGallery.Category="Theme Colors" ribbon:ColorPickerGallery.LayoutBehavior="Shaded" Color="#EEECE1" ribbon:ScreenTipService.ScreenTipHeader="Tan" />
													<media:SolidColorBrush ribbon:PopupGallery.Category="Theme Colors" ribbon:ColorPickerGallery.LayoutBehavior="Shaded" Color="#1F497D" ribbon:ScreenTipService.ScreenTipHeader="Dark Blue" />
													<media:SolidColorBrush ribbon:PopupGallery.Category="Theme Colors" ribbon:ColorPickerGallery.LayoutBehavior="Shaded" Color="#4F81BD" ribbon:ScreenTipService.ScreenTipHeader="Blue" />
													<media:SolidColorBrush ribbon:PopupGallery.Category="Theme Colors" ribbon:ColorPickerGallery.LayoutBehavior="Shaded" Color="#C0504D" ribbon:ScreenTipService.ScreenTipHeader="Red" />
