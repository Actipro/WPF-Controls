						<ribbon:Group Label="Clipboard" ImageSourceSmall="/Images/Icons/Paste16.png" Command="sample:ApplicationCommands.ShowDialog" CommandParameter="Clipboard" KeyTipAccessText="ZC" DialogLauncherKeyTipAccessText="FO">
							<ribbon:Group.Variants>
								<ribbon:GroupVariant Priority="10" Size="Small" />
							</ribbon:Group.Variants>					
							<ribbon:SplitButton KeyTipAccessText="V" Command="ApplicationCommands.Paste">
								<ribbon:Menu>
									<ribbon:Button KeyTipAccessText="P" Command="ApplicationCommands.Paste" />
									<ribbon:Button ImageSourceSmall="/Images/Icons/PasteSpecial16.png" Label="Paste Special" KeyTipAccessText="S" />
									<ribbon:Button ImageSourceSmall="/Images/Icons/PasteHyperlink16.png" Label="Paste Hyperlink" KeyTipAccessText="H" />							
								</ribbon:Menu>
							</ribbon:SplitButton>
							<ribbon:StackPanel ItemVariantBehavior="MediumThenSmallWhenSmall">
								<ribbon:Button KeyTipAccessText="X" Command="ApplicationCommands.Cut" />
								<ribbon:Button KeyTipAccessText="C" Command="ApplicationCommands.Copy" />
								<ribbon:Button ImageSourceSmall="/Images/Icons/FormatPainter16.png" Label="Format Painter" KeyTipAccessText="FP" />
							</ribbon:StackPanel>					
						</ribbon:Group>
						<ribbon:Group Label="Demo">
							<ribbon:Button ImageSourceLarge="/Images/Icons/CloseTab32.png" Label="Close Contextual Tab" Command="sample:ApplicationCommands.ToggleContextualTabGroup" CommandParameter="Table Tools" />
						</ribbon:Group>
					</ribbon:Tab>
				</ribbon:ContextualTabGroup>				
				
				<!-- Picture Tools Contextual Tab Group -->
				<ribbon:ContextualTabGroup Label="Picture Tools" Color="{x:Static ribbon:ContextualTabGroupColors.Pink}" IsActive="True">
					<ribbon:Tab Label="Format" KeyTipAccessText="JP">
						<ribbon:Group Label="Clipboard" ImageSourceSmall="/Images/Icons/Paste16.png" Command="sample:ApplicationCommands.ShowDialog" CommandParameter="Clipboard" KeyTipAccessText="ZC" DialogLauncherKeyTipAccessText="FO">
							<ribbon:Group.Variants>
								<ribbon:GroupVariant Priority="10" Size="Small" />
							</ribbon:Group.Variants>					
							<ribbon:SplitButton KeyTipAccessText="V" Command="ApplicationCommands.Paste">
								<ribbon:Menu>
									<ribbon:Button KeyTipAccessText="P" Command="ApplicationCommands.Paste" />
									<ribbon:Button ImageSourceSmall="/Images/Icons/PasteSpecial16.png" Label="Paste Special" KeyTipAccessText="S" />
									<ribbon:Button ImageSourceSmall="/Images/Icons/PasteHyperlink16.png" Label="Paste Hyperlink" KeyTipAccessText="H" />							
								</ribbon:Menu>
							</ribbon:SplitButton>
							<ribbon:StackPanel ItemVariantBehavior="MediumThenSmallWhenSmall">
								<ribbon:Button KeyTipAccessText="X" Command="ApplicationCommands.Cut" />
								<ribbon:Button KeyTipAccessText="C" Command="ApplicationCommands.Copy" />
								<ribbon:Button ImageSourceSmall="/Images/Icons/FormatPainter16.png" Label="Format Painter" KeyTipAccessText="FP" />
							</ribbon:StackPanel>					
						</ribbon:Group>
						<ribbon:Group Label="Demo">
							<ribbon:Button ImageSourceLarge="/Images/Icons/CloseTab32.png" Label="Close Contextual Tab" Command="sample:ApplicationCommands.ToggleContextualTabGroup" CommandParameter="Picture Tools" />
						</ribbon:Group>
					</ribbon:Tab>					
				</ribbon:ContextualTabGroup>			
				
			</ribbon:Ribbon.ContextualTabGroups>			
			
		</ribbon:Ribbon>
		
		<!-- StatusBar Control (Is the normal WPF control but with styling) -->
		<StatusBar DockPanel.Dock="Bottom" FocusManager.IsFocusScope="True" Style="{DynamicResource {x:Static themes:SharedResourceKeys.StatusBarStyleKey}}">
			<StatusBar.Resources>
				<shared:PercentageConverter x:Key="PercentageConverter" />
			</StatusBar.Resources>
			<StatusBar.ItemsPanel>
				<ItemsPanelTemplate>
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="16" />
						</Grid.ColumnDefinitions>
					</Grid>
				</ItemsPanelTemplate>
			</StatusBar.ItemsPanel>
			
			<StatusBarItem Grid.Column="0" Padding="3,0,0,0">
				<ribbon:Button Context="StatusBarItem" Padding="6,0,6,0" Label="Page: 1 of 1" 
				   ScreenTipHeader="Page number in document. Click to open the Go To dialog box."
				   Command="sample:ApplicationCommands.ShowDialog" CommandParameter="Go To" />
			</StatusBarItem>
			<Separator Grid.Column="1" />
			<StatusBarItem Grid.Column="2" Padding="0">
				<ribbon:Button Context="StatusBarItem" Padding="6,0,6,0" Label="Words: Not available" 
				   ScreenTipHeader="Number of words in document. Click to open Word Count dialog box."
				   Command="sample:ApplicationCommands.ShowDialog" CommandParameter="Word Count" />
			</StatusBarItem>
			<Separator Grid.Column="3" />
			<StatusBarItem Grid.Column="4" />
			<Separator Grid.Column="5" />
			<StatusBarItem Grid.Column="6" Padding="4,0,4,0">
				<StackPanel Orientation="Horizontal">
					<!--
					<ribbon:ButtonGroup Context="StatusBarItem">
					-->
						<ribbon:Button Context="StatusBarItem" ImageSourceSmall="/Images/Icons/ViewFullScreenReading16.png" ScreenTipHeader="Read Mode" />
						<ribbon:Button Context="StatusBarItem" ImageSourceSmall="/Images/Icons/ViewPrintLayout16.png" ScreenTipHeader="Print Layout" IsChecked="True" />
						<ribbon:Button Context="StatusBarItem" ImageSourceSmall="/Images/Icons/ViewWebLayout16.png" ScreenTipHeader="Web Layout" />
					<!--
					</ribbon:ButtonGroup>
					-->
					
					<ribbon:Button Context="StatusBarItem" Margin="0,1,0,1"  Padding="6,0,6,0" 
						ScreenTipHeader="Zoom level: Click to open the Zoom dialog box."
						Label="{Binding ElementName=scaleSlider, Path=Value, Converter={StaticResource PercentageConverter}, ConverterParameter=%}"
						Command="sample:ApplicationCommands.ShowDialog" CommandParameter="Zoom" />						
					
					<RepeatButton Margin="1,0,1,0" CommandTarget="{Binding ElementName=scaleSlider}" ribbon:ScreenTipService.ScreenTipHeader="Zoom Out" 
						Style="{DynamicResource {x:Static themes:SharedResourceKeys.StatusBarEmbeddedSliderDecreaseButtonBaseStyleKey}}"/>
					<Slider x:Name="scaleSlider" Width="100" Minimum="0.5" Maximum="2.0" Value="1.0" LargeChange="0.5" SmallChange="0.1" VerticalAlignment="Center" 
						IsSnapToTickEnabled="True" TickFrequency="0.1" ribbon:ScreenTipService.ScreenTipHeader="Zoom"
						Style="{DynamicResource {x:Static themes:SharedResourceKeys.StatusBarEmbeddedSliderStyleKey}}" />
					<RepeatButton Margin="1,0,1,0" CommandTarget="{Binding ElementName=scaleSlider}" ribbon:ScreenTipService.ScreenTipHeader="Zoom In" 
						Style="{DynamicResource {x:Static themes:SharedResourceKeys.StatusBarEmbeddedSliderIncreaseButtonBaseStyleKey}}"/>
				</StackPanel>
			</StatusBarItem>
		</StatusBar>
				   
		<Border Background="{DynamicResource {x:Static themes:AssetResourceKeys.ContainerBackgroundMidLowBrushKey}}">
			<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Focusable="False">
				<ScrollViewer.Resources>
					<Style TargetType="ScrollViewer" BasedOn="{StaticResource {x:Static themes:SharedResourceKeys.WorkspaceEmbeddedScrollViewerStyleKey}}" />
				</ScrollViewer.Resources>

				<ContentControl x:Name="contentContainer" Margin="7" IsTabStop="False">
					<ContentControl.LayoutTransform>
						<ScaleTransform ScaleX="{Binding ElementName=scaleSlider, Path=Value}" ScaleY="{Binding ElementName=scaleSlider, Path=Value}" />
					</ContentControl.LayoutTransform>
				</ContentControl>
			</ScrollViewer>
		</Border>
				
	</DockPanel>
		
</ribbon:RibbonWindow>
