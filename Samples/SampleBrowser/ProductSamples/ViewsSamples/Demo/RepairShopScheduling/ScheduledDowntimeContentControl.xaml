<UserControl x:Class="ActiproSoftware.ProductSamples.ViewsSamples.Demo.RepairShopScheduling.ScheduledDowntimeContentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:shared="http://schemas.actiprosoftware.com/winfx/xaml/shared"
             >
	
	<StackPanel Margin="0,5">
		<shared:Wave Height="5" Fill="#e57327" ApexCount="8" SnapsToDevicePixels="True" />
		<Border Background="#e57327" SnapsToDevicePixels="True">
			<shared:PixelSnapper>
				<TextBlock Margin="0,8" Text="{Binding Hours, StringFormat='{}Scheduled Downtime ({0} hours)'}" FontSize="16" FontStyle="Italic" Foreground="#ffffff" HorizontalAlignment="Center" />
			</shared:PixelSnapper>
		</Border>
		<shared:Wave Height="5" Fill="#e57327" ApexCount="8" IsInverted="True" SnapsToDevicePixels="True" />
	</StackPanel>

</UserControl>
