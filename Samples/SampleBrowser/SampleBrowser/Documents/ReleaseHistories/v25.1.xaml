			<TextBlock Style="{StaticResource DocumentSubHeadingTextBlockStyle}">Bars</TextBlock>
			<StackPanel Style="{StaticResource DocumentBulletPanelStyle}">
				<sampleBrowser:BulletContentControl Content="Added RibbonViewModel.SelectedItem property for the currently selected RibbonTabViewModel." />
				<sampleBrowser:BulletContentControl Content="Added an InvocationFocusBehavior property to most bar controls that determines how focus should be handled following the primary invocation of the control." />
				<sampleBrowser:BulletContentControl Content="Added DockableToolBarSerializerOptions.IsVisible flag to serializer/deserialize dockable toolbar visibility with layouts." />
				<sampleBrowser:BulletContentControl Content="Improved RibbonGallery keyboard navigation to better match Office behavior." />
